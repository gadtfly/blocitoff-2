<%= form_for [user, item], url: user_items_path, html: { method: :post } do |f| %>
  <div class="form-group">
    <%= f.label :name  %>
    <%= f.text_field :name, class: 'form-control', placeholder:'Enter the item name' %>
  </div>
  <div class= "form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>