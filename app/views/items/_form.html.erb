<div class="col-md-4">
  <%= form_for [user,item], :url => user_items_path(user_id: current_user) do |f| %>

    <div class="form-group">
        <%= f.label :name  %>
        <%= f.text_field :name,cols: 8,class: 'form-control', placeholder:'Enter the item name'%>
      <div class="items-form">
        <%= f.submit "Save",class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>

