<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class= "top">
  <div class="container">
    <ul class="nav nav-pills bar">
      <li><%= link_to "Blocitoff", root_path %></li>
      <% if current_user %>
      <li><%= link_to "Items", user_items_path(current_user) %></li>
      <% end %>
      
  <div class="pull-right user-info">
        <% if user_signed_in? %>
          Signed is as: <strong><%= current_user.username %></strong> ||
          <%= link_to 'User Profile',profile_path,method: :get, :class => 'navbar-link'%> || <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
        <% else %>
        <%= link_to "Sign Up", new_user_registration_path, :class => 'nav-bar-link' %>  ||  
          <%= link_to "Sign In", new_user_session_path, :class => 'nav-bar-link' %>
        <% end %>
    
      </div>
    </div>


    <!--<p class="notice pull-right"><%= notice %></p>
     <p class="alert pull-right"><%= alert %></p>-->

      <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash.now[:alert] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash.now[:alert] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
     
      
      
      

<%= yield %>



</body>
</html>
