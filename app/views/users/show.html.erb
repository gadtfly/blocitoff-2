
<div class="user-prof">
  <div>
    <h2><%= @user.username %> Profile</h2>
      <%= image_tag @user.avatar_url(200), class: 'gravatar user_grav'  %><!--shows users gravatar-->
  </div>
  <div>
    <% if current_user == @user %><!--removes links for other users viewing profile-->
      <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link'%>   |    
      <a href="https://en.gravatar.com/">Edit Gravatar</a> 
      
    <% end %>
  </div>
</div>

<div class='user_links'>
  <div class = 'item_top'>
    <h2>Users To Do Items</h2>
    <h5 class="pull-right"><%="Number of items: #{@user.items.count}"%> </h5><!--adds count to items list-->
  </div>

  <h4><%= render partial: 'items/itemname', locals: {user: @user}%></h4><!--Shows users to do list with no other info or actions-->
</div>






